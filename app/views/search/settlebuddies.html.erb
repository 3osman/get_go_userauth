		<%= javascript_include_tag 'jasny-bootstrap' %>
		<%= javascript_include_tag 'checkbox' %>
		<%= javascript_include_tag 'radio' %>
		<%= javascript_include_tag 'bootstrap-switch' %>
		<%= javascript_include_tag 'toolbar' %>
		<%= javascript_include_tag 'starrr' %>
		<%= javascript_include_tag 'jquery.matchHeight' %>

		<%= javascript_include_tag 'getgo' %>

	</body>
