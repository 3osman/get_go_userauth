<div class="row" style="margin-top:30px;">
	<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
		<div class="tile tile-login">
			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

			<div class="getgo-logo">
				<i class="icon-getgo_logo"></i>
			</div>
			<h3>Sign in</h3>

			<div class="input-icon">
				<span class="fa-envelope fa"></span>

				<%= f.email_field :email, autofocus: true, autocomplete: "off",class: 'form-control', placeholder: 'E-mail address' %>

			</div>

			<div class="input-icon">
				<span class="fa-lock fa"></span>
				<%= f.password_field :password, autocomplete: "off", class:'form-control',placeholder: 'Password'%>

			</div>
			<div class="actions">
				<%= f.submit "Log in", class:'btn btn-block btn-success btn-embossed' %>
			</div>

			<div class="login-action clearfix">
				<div class="row">
					<div class="col-xs-6">
						<% if devise_mapping.rememberable? -%>
						<%= f.check_box :remember_me %>
						<%= f.label :remember_me, class:"checkbox", for:"checkbox1" %>

						<% end -%>

					</div>
					<% end %>

					<div class="col-xs-6">
						<%= render "devise/shared/links" %>

					</div>
				</div>
			</div>
		</div>

	</div>
</div>
</div>
