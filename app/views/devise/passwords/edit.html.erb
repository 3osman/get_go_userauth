<div class="getgo-content">
	<div class="container-fluid">
		<div class="row" style="margin-top:30px;">
			<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
				<div class="tile tile-signup">
					<div class="getgo-logo">
						<i class="icon-getgo_logo"></i>
					</div>
					<h3>Setup new password</h3>
					<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
					<%= devise_error_messages! %>
					<%= f.hidden_field :reset_password_token %>
					<p style="text-align: center" ></p>
					<div class="input-icon" style="margin-top: 20px;">
						<span class="fa-lock fa"></span>
						<%= f.password_field :password, autofocus: true, autocomplete: "off",class:"form-control", placeholder:"New password" %>

					</div>
					<div class="input-icon" style="margin-bottom: 20px;">
						<span class="fa-lock fa"></span>
						<%= f.password_field :password_confirmation, autocomplete: "off",class:"form-control", placeholder:"Re-enter password" %>
					</div>
					<%= f.button "Change my password", :submit => "", class: "btn btn-block btn-success btn-embossed" %>

					<div class="login-action clearfix">

					</div>
					<% end %>

				</div>
			</div>
		</div>
	</div>

